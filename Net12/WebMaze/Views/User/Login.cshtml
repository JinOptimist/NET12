@model LoginViewModel
 
<form action="/User/Login" method="post">
    @Html.HiddenFor(x=>x.ReturnUrl)
    <div>
        Login: @Html.TextBoxFor(x => x.Login)
    </div>
    <div>
        Password: @Html.TextBoxFor(x => x.Password, new { @type = "password" })
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>