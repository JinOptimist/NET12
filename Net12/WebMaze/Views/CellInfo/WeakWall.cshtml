@model CellInfoViewModel
@{
    Layout = "_LayoutYellowTeam";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/siteYellowTeam.css" />
</head>
<body>
    <div class="block001">
        <div class="block002">
            <h1 class="rule">RULE</h1>
        </div>
        <div class="block003">
            <div>
                <img class="block003-1" src='@Model.ImageUrl' />
                <div class="name">
                    <text class=" name001">Weak wall</text>
                </div>
            </div>
            <div class="block003-2">
                <ul class="list">
                    <li>@Model.ShortsDescriptions.ElementAt(0)</li>
                    <li>@Model.ShortsDescriptions.ElementAt(1)</li>
                </ul>
            </div>
            <div class="block003-3">
                <p class=text001> @Model.Desc </p>
            </div>
        </div>

        <div class=" canStep">
            Can step: <input type="checkbox" checked="@(Model.CanStep ? "checked" : null)" disabled="disabled" />
        </div>

    </div>

</body>
</html>