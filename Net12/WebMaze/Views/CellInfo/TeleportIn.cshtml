@model CellInfoViewModel

@section Scripts{
        <script src="~/js/Cells/teleportInInfo.js"></script>
    }

<div class="cell-info-contener in">
    <div>
        <h1>
            rule
        </h1>
    </div>

    <div class="area-to-change-color">
        <div>
            <img src='@Model.Url' />
        </div>

        <div>
            <h3 class="click-to-add-color">
                Teleport in cell
            </h3>
            <div>
                Can step: <input type="checkbox" checked="@(Model.CanStep ? "checked" : null)" disabled="disabled" />
            </div>
            <div>
                USE: infinity number of times
            </div>
            <div>
                COST: free
            </div>
        </div>

        <div>
            @Model.Desc
        </div>
    </div>
</div>