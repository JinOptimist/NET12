@model List<ImageViewModel>

@section Scripts{
    <script src="~/js/galleryAjax.js"></script>
}


<form action="@Url.Action("Sort", "Gallery")" method="GET">
    <a href="#">Sorted by prop</a>
    <input type="number" name="inAssesment">
    <input type="text" name="inName">
    <input type="submit" value="Send" />
</form>

<div class="whole-page">

    <div class="text-center">
        <h1>Users gallery</h1>

        <div class="pic-to-gallery">
            @foreach (var image in Model)
            {
                <div>
                    <div>
                        <img class="image" src="@image.Picture">
                    </div>
                    <div class="t-to-gallery">
                        @image.Assessment
                    </div>
                    <div class="t-to-gallery">
                        @image.Description
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div>                        
                            <a href="@Url.Action("Wonderful","Gallery", new {@imageId = image.Id})" data-id="@image.Id" class="good-button">Wonderful</a>
                            <button class="bad-button">Awful</button>
                        </div>
                    }

                </div>

            }
        </div>
    </div>
</div>
