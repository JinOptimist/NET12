@model ImageViewModel

@section Scripts{    
    <link rel="stylesheet" href="~/css/galleryAddImage.css" />
}

<div class="add">
    <div class="add-text">
        Fill out the form to add your picture
    </div>
    <form action="/Gallery/AddImage" method="post" class="form" enctype="multipart/form-data">
        <div>
            @Html.ValidationSummary(true)
        </div>
        <div class="form-for-pic">
            Picture URL
            <input type="file" name="@nameof(ImageViewModel.ImageFile)" />
        </div>
        <div class="form-for-pic">
            Foto description's @Html.TextBoxFor(x => x.Description)
        </div>
        <div class="form-for-pic">
            Assessment @Html.TextBoxFor(x => x.Assessment, new { @type = "number" })
        </div>
        <div>
            <input type="submit" value="Save" class="form-button" />
        </div>
    </form>
</div>

