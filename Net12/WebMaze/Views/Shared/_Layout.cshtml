@using WebMaze.Services
@inject UserService userService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WebMaze</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel='stylesheet' href='~/css/ruleobj.css'>
    <link rel="stylesheet" href="~/css/reviews.css" />
    <link rel="stylesheet" href="~/css/VitalityPotion_Slime.css" />
    <link rel="stylesheet" href="~/css/Teleport_in_out.css" />
    <link rel='stylesheet' href='~/css/goldmine.css'>
    <link rel="stylesheet" href="~/css/bugReports.css" />
    <link rel="stylesheet" href="~/css/gameDevices.css" />
    <link rel="stylesheet" href="~/css/gallery.css" />
    <link rel="stylesheet" href="~/css/maze.css" />
    <link rel="stylesheet" href="~/css/Bed.css" />
    <link rel="stylesheet" href="~/css/Goblin.css" />
    <link rel="stylesheet" href="~/css/BuyMaze.css"/>
    <link rel="stylesheet" href="~/css/NewsComments.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle" href="#"
                           id="navbarDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            User
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a class="dropdown-item" href="/Home/AddUser">Register</a>
                                <a class="dropdown-item" href="/User/Login">Login</a>
                            }
                            else
                            {
                                <a class="dropdown-item" href="/User/Profile">Profile</a>
                                <a class="dropdown-item" href="/User/Logout">Exit</a>
                            }
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Info
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/CellInfo/Trap">Trap info</a>
                            <a class="dropdown-item" href="/CellInfo/Tavern">Tavern info</a>
                            <a class="dropdown-item" href="/CellInfo/Walker">Walker info</a>
                            <a class="dropdown-item" href="/CellInfo/AgressiveTroll">Agressive troll info</a>
                            <a class="dropdown-item" href="/CellInfo/WeakWall">Weak wall info</a>
                            <a class="dropdown-item" href="/CellInfo/Healer">Healer info</a>
                            <a class="dropdown-item" href="/CellInfo/Wallworm">Wallworm info</a>
                            <a class="dropdown-item" href="/CellInfo/VitalityPotion">VitalityPotion info</a>
                            <a class="dropdown-item" href="/CellInfo/Slime">Slime info</a>
                            <a class="dropdown-item" href="/CellInfo/Puddle">Puddle info</a>
                            <a class="dropdown-item" href="/CellInfo/Geyser">Geyser info</a>
                            <a class="dropdown-item" href="/CellInfo/TeleportIn">Teleport in info</a>
                            <a class="dropdown-item" href="/CellInfo/TeleportOut">Teleport out info</a>
                            <a class="dropdown-item" href="/CellInfo/Goldmine">Goldmine info</a>
                            <a class="dropdown-item" href="/CellInfo/Fountain">Fountain info</a>
                            <a class="dropdown-item" href="/CellInfo/Coin">Coin info</a>
                            <a class="dropdown-item" href="/CellInfo/HealPotion">HealPotion info</a>
                            <a class="dropdown-item" href="/CellInfo/BullEnemy">BullEnemy info</a>
                            <a class="dropdown-item" href="/CellInfo/Bed">Bed info</a>
                            <a class="dropdown-item" href="/CellInfo/Goblin">Goblin info</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/News/Index">News</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Suggested/NewCellSugg">New CellSugg</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Reviews/Index">Reviews</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/CellInfo/AddCell">Add Cell</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Books
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Home/AddBook">Add Book</a>
                            <a class="dropdown-item" href="/Home/Book">Books</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Stuff/Stuff">Hero's Stuff</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Suggested Enemies
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Suggested/AddSuggestedEnemy">Add Suggested Enemy</a>
                            <a class="dropdown-item" href="/Suggested/SuggestedEnemys">Suggested Enemies</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/BugReport/BugReports">List of reports</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/GameDevices/GameDevices">Game devices</a>
                    </li>
                        
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Gallery
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Gallery/Index">Gallery</a>
                            <a class="dropdown-item" href="/Gallery/AddImage">Add Image</a>
                        </div>
                    </li>

                    @if (userService.IsAdmin)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Gallery
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Gallery/Index">Gallery</a>
                                <a class="dropdown-item" href="/Gallery/AddImage">Add Image</a>
                            </div>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" href="/Maze/Index">Maze</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Miner/StartGame">StartGame</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            FavoriteGames
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Home/AddGame">Add Fav Game</a>
                            <a class="dropdown-item" href="/Home/FavoriteGames">Fav Games</a>
                        </div>
                        @if (userService.IsAdmin)
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Administration
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Admin/ViewPermission">View permission</a>
                                <a class="dropdown-item" href="/Admin/EditingUsers">Editing users</a>
                            </div>
                        </li>
                    }
                    </ul>
                </div>
            </nav>
        </header>

        <div>
            @RenderBody()
        </div>


        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - WebMaze
            </div>
        </footer>
    </body>
</html>
