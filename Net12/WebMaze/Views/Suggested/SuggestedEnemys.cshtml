@model List<SuggestedEnemysViewModel>

@{
    Layout = "_LayoutYellowTeam";
}

<div class="text-center">
    <h3>
        SUGGESTED ENEMYS
    </h3>

    <div>


        @foreach (var suggestedEnemys in Model)

        {
            if (suggestedEnemys.IsActive == true)
            {
        <div class="enemy">
            <div class="enemy_001">
                <div>
                    <a href="/Suggested/RemoveSuggestedEnemy?suggestedEnemysId=@suggestedEnemys.Id"><input type="submit" value="DELETE" /></a>
                    <a href="/Suggested/AddSuggestedEnemy?suggestedEnemysId=@suggestedEnemys.Id"><input type="submit" value="EDIT" /></a>
                </div>
                <div>
                    @suggestedEnemys.Name

                </div>
                <div>
                    @suggestedEnemys.Description
                </div>
                <div>
                    Author: @suggestedEnemys.UserName
                </div>
                <div>
                    Rating: @suggestedEnemys.GlobalUserRating
                </div>
            </div>
            <div>
                <img class=" enemy_002" src="@suggestedEnemys.Url" />
            </div>
            @if (User.Identity.IsAuthenticated)
            {
        <div>
            <a href="@Url.Action("WonderfulSuggestedEnemy","Suggested", new { @suggestedEnemysId = suggestedEnemys.Id })" class="good-button">Wonderful</a>           
            <button class="bad-button">Awful</button>
        </div>
            }
        </div>
            }
            else { };

        }

    </div>

</div>