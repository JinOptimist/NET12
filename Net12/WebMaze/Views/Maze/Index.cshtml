@using Net12.Maze
@model MazeLevel

<div class="text-center">
    <h1>Maze</h1>
    @for (int y = 0; y < Model.Height; y++)
    {
        <div>
            @for (int x = 0; x < Model.Width; x++)
            {
            <span>
                @if (Model[x, y] is Wall)
                {
                    <img class="cell" src="~/images/cells/wall.jpg" />
                }
                else
                {
                    <img class="cell" src="~/images/cells/ground.jpg" />
                }
            </span>
            }
        </div>
    }
</div>
