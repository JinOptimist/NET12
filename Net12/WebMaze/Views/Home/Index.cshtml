@model List<UserViewModel>

<div class="text-center">
    <h1>Welcome to Maze</h1>
    <div>
        Good news
    </div>
    <div>
        @foreach (var user in Model)
        {
            <span class="@(user.Coins > 0 ? "rich" : "poor")">
                @user.UserName
            </span>
        }
    </div>
    <div>
        Coins: @Model.Sum(x => x.Coins)
    </div>
</div>
