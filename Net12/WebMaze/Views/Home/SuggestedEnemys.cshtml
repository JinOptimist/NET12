@model List<SuggestedEnemysViewModel>

@{
    Layout = "_LayoutYellowTeam";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/siteYellowTeam.css" />
</head>

<body>

    <div class="text-center">
        <div>
            SUGGESTED ENEMYS
        </div>

        <div>


            @foreach (var suggestedEnemys in Model)
           
                {
                        if (suggestedEnemys.IsActive == true)
                    {
                        <div class="enemy">
                            <div class="enemy_001">
                                <div>
                                    @suggestedEnemys.Name
                                    <a href="/Home/RemoveSuggestedEnemy?suggestedEnemysId=@suggestedEnemys.Id">X</a>
                                    @*<a href="/Home/EditSuggestedEnemy?suggestedEnemys=@suggestedEnemys"><input type="submit" value="EDIT" /></a>*@
                                </div>
                                <div>
                                    @suggestedEnemys.Description
                                </div>

                            </div>
                            <div>
                                <img class=" enemy_002" src="@suggestedEnemys.Url" />
                            </div>
                        </div>
                    }
                else { };

                }
                    
        </div>

    </div>
</body>
</html>