@model List<BookViewModel>

 <fieldset>
	<legend><b>Books:</b></legend>
<div>
	@foreach (var book in Model)
	{
		<details>
			<summary>
				@book.Name<div id="publicationDate">Publicated: @book.PublicationDate</div>
			</summary>
			<div class="desc">
				<div class="block">
				<div class="block__inner">
				 <img src="@book.ImageLink" class="image">
				</div>
				</div>
				<div class="elements">
					<p>
						<b>Author:</b> @book.Author
					</p>
					<p>
						<b>Release Date: </b> @book.ReleaseDate
					</p>
				</div>
				<div class="desc1">
					<p><b>Description:</b></p>
					<p>@book.Desc</p>
				</div>
				<div class="link">
					@if(book.Link != null)
					{
						<b><a href="@book.Link" target="_blank">Link</a></b>
					}
				</div>
			</div>
		</details>
	}
</div>
</fieldset>

<style>
    details > summary {
		margin: 5px;
        padding: 5px;
        background-color: #eee;
        color: #333;
        border: 1px #ccc solid;
        cursor: pointer;
    }
 
  topdiv {
        border: 1px #ccc solid;
        padding: 10px;
    }
    details[open] > summary {
        color:#eee; 
        background-color:#333;
    }

	legend 
	{
		font-size: 22px;
		bottom5px;
	}

	.desc1
	{
		padding-bottom: 5px;
	}

	#publicationDate
	{
		float: right;
		color: #333;
        background-color: #eee;
        width: 150px;
		font-size: 14px;
		margin-top: 6px;
		text-align: right;
    }

	details[open] > summary > #publicationDate
	{
		float: right;
		color: #eee;
        background-color: #333;
        width: 150px;
		font-size: 14px;
		margin-top: 6px;
		text-align: right;
    }
		.block {
		 float: right;
		 width: 30%;  
	}

		.block__inner {
		 float: right;
		 width: 130px;
		 padding-top: 130px;
		 background-color: black;
		 position: relative;
		 margin-right: 6px;
	}

		.image {
		 position: absolute;
		 top: 0;
		 left: 0;
		 width: 100%;
		 height: 100%;
		 object-fit: cover;
	}

</style>

