@model List<FeedBackUserViewModel>


<div class="reviews-all">

    @{
        if(Model.Any())
        foreach (var item in Model)
        {

            <div class="review">

                <div class="rname-ico">
                    <img src="https://media.pn.am/media/issue/197/297/photo/197297.jpg" />
                </div>
                <div class="rname-ico-text">
                    <div>
                        Name: @item.UserName
                    </div>
                    <div>
                        @{ if (item.Rate > 5)
                            {
                                <div>Rating: 5</div>
                            }
                            else if (item.Rate <= 0)
                            {
                                <div>Rating: 1</div>
                            }
                            else
                            {
                                <div>Rating: @item.Rate</div>
                            }
                        }
                    </div>
                </div>
                <div class="rate-text">
                    @item.TextInfo
                </div>

            </div>

        }
    }
</div>
    <div style="margin-top: 3%;">
        <form action="/Home/Reviews" method="post" class="rate-put">
            <div>Оставить отзыв</div>
            <div>
                <div>
                    <input type="text" placeholder="Name" name="Name" />
                </div>
                <div>
                    <input type="number" placeholder="Age" name="Age" />
                </div>
                <div>
                    <input type="number" placeholder="Rate" name="Rate" />
                </div>
                <div>
                    <textarea name="Text"></textarea>
                </div>
                <div>
                    <input type="submit" value="Отправить" />
                </div>
            </div>
        </form>
    </div>

