@model List<GameViewModel>

    <div class="title-favGames">
        Favorite Games 
    </div>           
    
    <div>
                   @foreach (var game in Model)
                   {
        <div>


            <div class="title-favGame">
                <b>@game.Name</b>
            </div>
            <div class="favGame-desc">
                <div class="game-elements">
                    <p>
                        <b>Genre:</b> @game.Genre
                    </p>
                    <p>
                        <b>Year of Production:</b> @game.YearOfProd
                    </p>
                    <p>
                        <b>Rating:</b> @game.Rating/10
                    </p>
                </div>
                <div class="favGame-desc1">
                    <p><b>Description:</b> @game.Desc</p>
                </div>
                <div class="favGame-user-elements">
                    <p><b>Username:</b> @game.Username</p>
                    <p><b>Age:</b> @game.Age</p>                   
                </div>
            </div>



        </div>
                   }

    </div>
